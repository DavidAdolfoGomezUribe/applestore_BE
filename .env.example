# EJEMPLO DE ARCHIVO .env PARA APPLESTORE BACKEND
# Copia este archivo como .env y modifica los valores según necesites

# =============================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# =============================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=applestore_db
MYSQL_USER=applestore_user
MYSQL_PASSWORD=applestore_password
MYSQL_HOST=mysql
MYSQL_PORT=3306

# =============================================
# CONFIGURACIÓN DE QDRANT (BASE DE DATOS VECTORIAL)
# =============================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# =============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =============================================
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================
# CONFIGURACIONES ADICIONALES
# =============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=./uploads
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
