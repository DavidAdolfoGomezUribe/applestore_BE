# EJEMPLO DE ARCHIVO .env PARA APPLESTORE BACKEND
# Copia este archivo como .env y modifica los valores según necesites

# =============================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# =============================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=applestore_db
MYSQL_USER=applestore_user
MYSQL_PASSWORD=applestore_password
MYSQL_HOST=mysql
MYSQL_PORT=3306

# =============================================
# CONFIGURACIÓN DE QDRANT (BASE DE DATOS VECTORIAL)
# =============================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# =============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =============================================
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================
# CONFIGURACIONES ADICIONALES
# =============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=./uploads
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Configuración de AI Agents 

# ========== CONFIGURACIÓN DE PROVEEDORES DE IA ==========
DEFAULT_AI_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ========== CONFIGURACIÓN DE COSTOS ==========
COST_TRACKING_ENABLED=true
DAILY_COST_LIMIT=50.0
MONTHLY_COST_LIMIT=1000.0

# ========== CONFIGURACIÓN DE REDIS (para tracking de costos) ==========
REDIS_URL=redis://localhost:6379
# O para Redis en Docker: REDIS_URL=redis://redis:6379

# ========== CONFIGURACIÓN DE QDRANT (ya existente) ==========
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=products_kb

# ========== CONFIGURACIÓN OPCIONAL ==========
# Logging level para agentes IA
AI_LOG_LEVEL=INFO

# Timeout para requests a proveedores de IA (segundos)
AI_REQUEST_TIMEOUT=30

# Número máximo de mensajes de historial para contexto
MAX_CONVERSATION_HISTORY=10

# Habilitar/deshabilitar búsqueda de productos en agentes
ENABLE_PRODUCT_SEARCH=true
